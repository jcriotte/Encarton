{% extends 'layout.html.twig' %}

{% block content %}
    <main class='container-artist'>

        {# listes album #}
        <section class='albums'>
            <h2>Listes des albums<h2>
                <ul>
                    {% for album in albums %}
                    <li>{{ album.name }}</li>
                    <li>{{ album.photo }}</li>
                    {% endfor %}
                </ul>
        </section>


        {# artiste description #}
        <section class='artist'>
            <h2> Informations sur l'artiste<h2>
                <ul>
                    <li>{{ artist.name }}</li>
                    <li>{{ artist.photo }}</li>
                </ul>
        </section>
    </main>
{% endblock %}